lvcreate -L 3072M -v -nHOSTNAME_slash vg
lvcreate -L 512M -v -nHOSTNAME_swap vg
mke2fs -j -i 4096 -L HOSTNAME_slash /dev/vg/HOSTNAME_slash
mkswap -f /dev/vg/HOSTNAME_swap
mount /dev/vg/HOSTNAME_slash /mnt/target
cd /mnt/target
tar xjpf ../dev/root/stage4.tar.bz2
chroot .
sh root/STUFF_TO_DO HOSTNAME IP
exit
cd
umount /mnt/target
sed -e 's/dev-domU/HOSTNAME/g' -e 's/dev_/HOSTNAME_/g' /etc/xen/dev-domU.ladan.se >> /etc/xen/HOSTNAME.ladan.se
xm create HOSTNAME.ladan.se -c

emerge -av --ignore-default-opts fcron
